{
    "name": "kotlin-vscode",
    "displayName": "Kotlin",
    "description": "Kotlin support for Visual Studio Code",
    "version": "1.0.0",
    "publisher": "sommd",
    
    "icon": "icon_Kotlin.svg",
    "galleryBanner": {
        "color": "#ff8900",
        "theme": "light"
    },
    "categories": [
        "Languages", "Snippets"
    ],
    "keywords": [
        "kotlin",
        "kt",
        "kts",
        "snippets",
        "syntax",
        "grammar",
        "language"
    ],
    "homepage": "https://github.com/sommd/kotlin-vscode/blob/master/README.md",
    "bugs": {
        "url": "https://github.com/sommd/kotlin-vscode/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/sommd/kotlin-vscode.git"
    },
    "license": "SEE LICENSE IN LICENSE",
    
    "engines": {
        "vscode": "^1.5.0"
    },
    "contributes": {
        "languages": [{
            "id": "kotlin",
            "aliases": ["Kotlin", "kotlin"],
            "extensions": ["kt", "kts"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "kotlin",
            "scopeName": "source.Kotlin",
            "path": "syntaxes/Kotlin.tmLanguage"
        }],
        "snippets": [
            {
                "language": "kotlin",
                "path": "snippets/kotlin.json"
            }
        ]
    }
}
